@model CarRental.Web.Areas.Administration.ViewModels.Locations.AddLocationViewModel
@{
    ViewData["Title"] = "Add Location";
}

<center><h1>Add Location in the database</h1></center>
<hr />
<div class="row col-md-12">
    <div class="col-md-6">
        <form asp-controller="Locations" asp-action="Add" method="post">


            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Add Location</button>
        </form>
    </div>

    <div class="col-md-6">
        <strong>We have available the following locations: </strong>
        @foreach (var location in Model.Locations)
        {
            <div>@location</div>
        }
    </div>
</div>

<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.6.2.js">
</script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.8.1/jquery.validate.js">
</script>
<script src="~/Scripts/jquery.validate.unobtrusive.js">
</script>