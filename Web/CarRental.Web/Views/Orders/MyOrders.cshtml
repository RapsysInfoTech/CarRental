
@model ICollection<MyOrdersViewModel>

@{
    ViewData["Title"] = "My Orders";
}

    <center>
        <h1>My Orders</h1>
    </center>
<hr />

<table class="table table-hover border">
    <thead>
        <tr class="table-primary ">
            <th scope="col">Order Id</th>
            <th scope="col">Car Model</th>
            <th scope="col">Pick Up Location</th>
            <th scope="col">Return Location</th>
            <th scope="col">Start Date</th>
            <th scope="col">End Date</th>
            <th scope="col">Price</th>
            <th scope="col">Status</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var order in @Model)
        {
            <tr class="table-light">
                <th scope="row"><a href="/orders/details/@order.Id">@order.Id</a></th>
                <td>@order.CarModel</td>
                <td>@order.PickUpLocation</td>
                <td>@order.ReturnLocation</td>
                <td>@order.RentStart.ToShortDateString()</td>
                <td>@order.RentEnd.ToShortDateString()</td>
                <td>@order.Price</td>
                <td>@order.Status.ToString()</td>
            </tr>
        }


    </tbody>
</table>
@if (Model.Count() > 0)
{
    var spent = this.Model.Sum(x => x.Price);
    <h3 class="text-info">Total spent: $ @spent</h3>
}

<script>
   $(function(){
    $('.table tr[data-href]').each(function(){
        $(this).css('cursor','pointer').hover(
            function(){ 
                $(this).addClass('active'); 
            },  
            function(){ 
                $(this).removeClass('active'); 
            }).click( function(){ 
                document.location = $(this).attr('data-href'); 
            }
        );
    });
});
</script>